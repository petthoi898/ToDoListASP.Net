<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Public/css/all.min.css" rel="stylesheet" />
    @RenderSection("head", required: false)
</head>

<body>
    <section class="clearfix header bg-white">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="@Url.Action("Index", "ToDoItems")">ToDo List</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("IndexImportant", "ToDoItems")">Important</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("IndexCompleted", "ToDoItems")">Completed</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </section>

    <section class="clearfix maincontent">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </section>

    <section class="clearfix footer bg-white">
        <div class="container-fluid text-center py-3">
            Tien Nguyen
        </div>
    </section>

    @RenderSection("footer", required: false)

</body>
</html>
